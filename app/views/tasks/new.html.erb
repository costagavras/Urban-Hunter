
<h1>Create a task</h1>

<div class="Task_form">

  <%= form_for([@hunt, @task]) do |t| %>
  <%  if @task.errors.any? %>
      <%= flash.now[:notice] = "Please check all the fields !" %>
      <h3> Errors: </h3>
      <ul>
          <%  @task.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end  %>
      </ul>
  <% end %>

      <div class="field">
        <%= t.label :details %>
        <%= t.text_field :details %>
      </div>

      <div class="field">
        <%= t.label :address %>
        <%= t.text_field :address %>
      </div>

      <div class="field">
        <%= t.label :neighbourhood %>
        <%= t.text_field :neighbourhood %>
      </div>


      <div class="field">
          <%= t.submit %>
      </div>

    <% end %>
    <%= link_to "No more tasks", hunt_path(@hunt) %>




</div>
