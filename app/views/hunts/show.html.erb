
<h3><%= link_to('Back to Welcome', root_path) %></h3>
<h3><%= link_to('Back to Hunts', hunts_path) %></h3>

<h1>Hunt: <%= @hunt.name %></h1>

  <br>
<% if current_user == @hunt.user %>
  <li><%= link_to('Edit Hunt', edit_hunt_path) %></li>
  <li><%= link_to('Join Hunt', hunt_join_path, method: :post, data: {confirm: "Are you sure you want to join this hunt?"}) %></li>
<% end %>
<hr>
<div>
  <p> Category: <%= @hunt.category.name %></p>
  <p> Difficulty: <%= @hunt.difficulty_level %></p>
  <p>Created by: <%=@hunt.user.first_name%> <%=@hunt.user.last_name%></p>
  <p>Date of hunt: <%=@hunt.hunt_date.strftime("%v")%></p>
  <p>Time of hunt: <%=@hunt.hunt_time.strftime("%H:%M")%></p>
  <p>Participants to the hunt:</p>
  <% @hunt.users.each do |participant| %>
    <div class="hunt_participants">
      <li><%= participant.first_name%> <%= participant.last_name %>
        <%if participant.id == current_user.id %>
           | <%= link_to('Leave this hunt', hunt_unjoin_path, method: :post, data: {confirm: "Are you sure you want to leave this hunt?"})%>
        <% end %></li>
    </div>
  <% end %>
</div>



<h2>... Available Tasks ...</h2>
<hr>

   <% @tasks.each do |t| %>
      <div class = "task"  >
        <p> Details: <%= link_to "#{t.details}", "/hunts/#{@hunt.id}/tasks/#{t.id}" %></p>
        <p> Address: <span class = "taskaddress"> <%= t.address  %></span></p>
        <p> Neighbourhood: <%= t.neighbourhood %> </p>
        <% if current_user == @hunt.user %>
        <li>  <%= link_to 'Edit Task', "/hunts/#{@hunt.id}/tasks/#{t.id}/edit" %> </li>
        <li><%= link_to 'Add a task', new_hunt_task_path(@hunt) %></li>
        <% end %>
      </div>
   <% end  %>

<div id = "mapid_all">
</div>


<%= render(partial: 'comments/form', locals: { hunt: @hunt, comment: @comment }) %>

<% @comments.each do |comment| %>
  <p>posted by:  <%= comment.user.first_name %>   on   <%= comment.created_at.strftime("%B %d, %Y") %> <%= comment.created_at.strftime("%I:%M %p ") %></p>
  <p><%= comment.description %></p>
<% end %>
