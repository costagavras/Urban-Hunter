<h1>Edit <span><%=@hunt.name%><span></h1>
<%=  link_to("Back to Hunt view", hunt_path(@hunt)) %>
<br>
<%=  link_to('Back to Hunts', hunts_path) %>
<br>

<%  if @hunt.errors.any? %>
    <%= flash.now[:notice] = "Please check all the fields !" %>
    <h3> Errors: </h3>
    <ul>
        <%  @hunt.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end  %>
    </ul>
<% end %>





<hr>


<%= render 'hunts/form_new_hunt', hunt: @hunt, category: @category, categories: @categories %>


<%= link_to('Delete Hunt', hunt_path(@hunt), method: :delete, data: {confirm: "Are you sure you want to delete this hunt?"}) %>
