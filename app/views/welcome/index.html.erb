
<div class="welcome_section">
  <div class="welcome_content">

    <div class="intro">
      <div class="intro_title">
        <h2><%= link_to("Join the Hunt", hunts_path) %></h2>
      </div>
      <div class="intro_text">
        <p>And be part of the largest hunt accross your city</p>
      </div>
  </div>



  <div class="description">
    <div class="description_title">
      <h2>Description</h2>
    </div>
    <div class="description_text">
      <p>Participate in a hunt and complete achievements !</p>
    </div>
  </div>

  <div class="images_content">
    <div class="images">
      <div class="image">
        <img src="https://freedesignfile.com/upload/2016/11/Happy-tourists-holding-a-map-of-the-city.jpg" class="stock_pic1" alt="">
      </div>
      <div class="image">
        <img src="https://i.imgur.com/T515z5M.png" alt="">
      </div>
      <div class="image">
        <img src="http://www.prankmenot.com/images/12-11-2018/9KioO7.png" alt="">
      </div>
    </div>
  </div>

  <div class="category_menu">
    <div class="categories">
      <% @categories.each do |category| %>
      <div class="category_section">
        <div class="category_logo">
          <%= link_to("", category_path(category), :class => "category", :id => category.name) %>
        </div>
        <div class="category_button">
          <%= link_to("#{category.name}", category_path(category)) %>
        </div>
      </div>
      <% end %>
    </div>
  </div>





</div>
