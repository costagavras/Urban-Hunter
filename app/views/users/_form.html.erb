<div class="sign_up_form animated fadeInDown">


  <div class="close_sign_up">
    <%= button_tag "x" %>
  </div>
  <%= form_for sign_up do |f| %>
    <div class="first_name_field">
      <h3><%= f.label :first_name %></h3>
      <%= f.text_field :first_name %>
    </div>
    <div class="last_name_field">
      <h3><%= f.label :last_name %></h3>
      <%= f.text_field :last_name %>
    </div>
    <div class="email_field">
      <h3><%= f.label :email %></h3>
      <%= f.text_field :email %>
    </div>
    <div class="password_field">
      <h3><%= f.label :password %></h3>
      <%= f.password_field :password %>
    </div>
    <div class="password_field">
      <h3><%= f.label :password_confirmation %></h3>
      <%= f.password_field :password_confirmation %>
    </div>
      <h3><%= f.submit "Sign up" %></h3>
  <% end %>
</div>
